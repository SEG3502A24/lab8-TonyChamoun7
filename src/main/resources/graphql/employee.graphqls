type Employee {
  id: ID!
  name: String!
  dateOfBirth: String!
  city: String!
  salary: Float!
  gender: String
  email: String
}

type Query {
  employees: [Employee]
  employeeById(id: ID!): Employee
}

input CreateEmployeeInput {
  name: String!
  dateOfBirth: String!
  city: String!
  salary: Float!
  gender: String
  email: String
}


input UpdateEmployeeInput {
  name: String
  dateOfBirth: String
  city: String
  salary: Float
  gender: String
  email: String
}

type Mutation {
  addEmployee(input: CreateEmployeeInput!): Employee!
  updateEmployee(id: ID!, input: UpdateEmployeeInput!): Employee!
  deleteEmployee(id: ID!): Boolean
}
